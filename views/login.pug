extends layout

block content
	.main.container
		nav.navbar.navbar-default
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Voting System
		.row.panel.panel-default.col-lg-6.col-md-offset-2
			.row.panel-heading
				.col-md-6.col-md-offset-5
					h4.display-4.panel-title Sign In
			.row.panel-body
				.col-md-6.col-md-offset-3
					form(method='POST' action='/home')
						div.form-group
							label(for='email') Email
							input.form-control(type='text' id='email' placeholder='email' name='email')
						div.form-group
							label(for='password') Password
							input.form-control(type='password' id='password' placeholder='password' name='password')
						button.btn.btn-primary(type='submit') Log in 