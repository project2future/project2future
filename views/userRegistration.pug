extends layout

block content
	.main.container
		nav.navbar.navbar-default
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Voting System
				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/logout') Sign Out
		.row.panel.panel-default.col-lg-6.col-md-offset-2
			.row.panel-heading
				.col-md-6.col-md-offset-5
					h4.display-4.panel-title Add User
			.row.panel-body
					form.form-horizontal(method='POST' action='/createUser')
						div.form-group
							label.control-label.col-sm-4(for='name') Full Name
							.col-sm-8
								input.form-control(type='text' id='name' placeholder='Full Name' name='name')
						div.form-group
							label.control-label.col-sm-4(for='email') Email
							.col-sm-8
								input.form-control(type='text' id='email' placeholder='email' name='email')
						div.form-group
							label.control-label.col-sm-4(for='password') New Password
							.col-sm-8
								input.form-control(type='password' id='password' placeholder='password' name='password')
						div.form-group
							label.control-label.col-sm-4(for = 'isadmin') Admin Privilege
							.col-sm-4
								input.form-control(type='checkbox' id='isadmin',name='isadmin')
						.row
							.col-md-6.col-md-offset-5
								button.btn.btn-primary(type='submit') Create 